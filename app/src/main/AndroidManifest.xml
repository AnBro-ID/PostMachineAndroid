<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ru.anbroid.postmachine">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme"
        android:resizeableActivity="false"
        android:supportsPictureInPicture="false">

        <activity
            android:resizeableActivity="false"
            android:supportsPictureInPicture="false"
            android:name="ru.anbroid.postmachine.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="https"/>
            </intent-filter>
        </activity>

        <activity
            android:resizeableActivity="false"
            android:supportsPictureInPicture="false"
            android:name="ru.anbroid.postmachine.HelpActivity"
            android:theme="@style/NoActBarTheme"></activity>

        <activity
            android:resizeableActivity="false"
            android:supportsPictureInPicture="false"
            android:name="ru.anbroid.postmachine.TaskActivity"
            android:theme="@style/NoActBarTheme"></activity>

        <activity
            android:resizeableActivity="false"
            android:supportsPictureInPicture="false"
            android:name="ru.anbroid.postmachine.PrefActivity"
            android:theme="@style/NoActBarTheme"></activity>

    </application>
</manifest>